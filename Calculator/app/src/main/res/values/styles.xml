<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>


    </style>

    <color name="black">#000000</color>
    <color name="white">#FFFFFF</color>
    <color name="greyDark">#C8000000</color>
    <color name="blue">#2196F3</color>
    <color name="greyLight">#7F8081</color>

    <style name="number">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/greyDark</item>
        <item name="autoSizeTextType">uniform</item>
    </style>

    <style name="operator" parent="number">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="layout" parent="number">
        <item name="android:background">@color/white</item>
    </style>

    <style name="scrollableText">
        <item name="android:scrollHorizontally">true</item>
    </style>
</resources>