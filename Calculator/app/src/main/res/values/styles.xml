<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>


    </style>

    <color name="black">#000000</color>
    <color name="white">#FFFFFF</color>
    <color name="greyDark">#C8000000</color>
    <color name="blue">#2196F3</color>
    <color name="greyLight">#7F8081</color>

    <style name="NumberTheme">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/greyDark</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="autoSizeTextType">uniform</item>
    </style>

    <style name="OperatorsTheme" parent="NumberTheme">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="LayoutTheme" parent="NumberTheme">
        <item name="android:background">@color/white</item>
    </style>

    <style name="ScrollableTextTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:layout_gravity">center_vertical|right</item>
    </style>
</resources>