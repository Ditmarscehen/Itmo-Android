        android:id="@+id/day6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="day6"
        app:layout_constraintBottom_toTopOf="@+id/picture6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/day5"
