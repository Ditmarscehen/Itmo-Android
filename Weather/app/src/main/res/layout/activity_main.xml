    <ImageView
        android:id="@+id/picture5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/picture6"
        app:layout_constraintStart_toEndOf="@+id/picture4"
