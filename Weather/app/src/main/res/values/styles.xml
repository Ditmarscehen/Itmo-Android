<resources>
    <!-- Base application theme. -->
    <style name="LightTheme" parent="Theme.AppCompat.Light">
        <item name="primaryTextColor">@color/black</item>
        <item name="secondTextColor">@color/colorPrimaryDark</item>
        <item name="thirdTextColor">@color/colorAccent</item>
        <item name="primaryBackgroundColor">@color/blueLight</item>
        <item name="secondBackgroundColor">@color/white</item>
        <item name="thirdBackgroundColor">@color/colorAccent</item>
    </style>

    <style name="base">
        <item name="autoSizeTextType">uniform</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="day" parent="base">
        <item name="android:textColor">?attr/primaryTextColor</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="temperature" parent="base">
        <item name="android:textColor">?attr/primaryTextColor</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="weather" parent="base">
        <item name="android:padding">2dp</item>
        <item name="android:textColor">?attr/secondTextColor</item>
    </style>

    <style name="date" parent="base">
        <item name="android:paddingBottom">3dp</item>
        <item name="android:textColor">?attr/thirdTextColor</item>
    </style>
</resources>